<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AddressMapper">
	<select id="selectAddress" parameterType="String" resultType="AddressDTO">
		select * from address
		where userid = #{userid}
	</select>
	<update id="changeAdd" parameterType="hashmap">
		update address
		set post_num = #{post}, 
			addr1 = #{addr1}, 
			addr2 = #{addr2}
		where userid = #{userid}
	</update>
	<select id="selectAllAddress" resultType="AddressDTO">
		select * from address
	</select>
</mapper>
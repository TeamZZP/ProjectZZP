</select>	 -->

<select id="bestProduct" resultType="productDTO">
select * from product
</select>

<select id="searchProduct" resultType="productDTO" parameterType="String">
select * from product where p_name like '%'||#{searchValue}||'%' or p_content like '%'||#{searchValue}||'%'
</select>

</mapper>
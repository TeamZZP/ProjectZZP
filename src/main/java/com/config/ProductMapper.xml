<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ProductMapper">


<select id="productList" resultType="ProductDTO" parameterType="String">
	 select * from product where p_category = #{p_category} 
</select>

<select id="productRetrieve" parameterType="String" resultType="ProductDTO">
	select * from product where p_id = #{p_id}
</select>	

<select id="bestProduct" resultType="productDTO">
select * from product
</select>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CartMapper">
	
	<insert id="cartAdd" parameterType="CartDTO">
		insert into cart (cart_id,userid,p_id,p_name,p_selling_price,p_amount,p_image)
		values
		(cart_cart_id_seq.nextval,#{userid},#{p_id},#{p_name},#{p_selling_price},#{p_amount},#{p_image})
	</insert>
	
	<select id="cartList" parameterType="string" resultType="CartDTO">
		select * from cart where userid = #{userid}
	</select>
</mapper>